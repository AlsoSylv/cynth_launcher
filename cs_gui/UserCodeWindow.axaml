<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="cs_gui.UserCodeWindow"
        Title="UserCodeWindow">
    <StackPanel>
        <SelectableTextBlock x:DataType="x:String" Name="UserCodeDisplay" Tapped="InputElement_OnTapped" PointerEntered="UserCodeDisplay_OnPointerEntered" PointerExited="UserCodeDisplay_OnPointerExited" Text="{Binding}" />
        
        <TextBlock Name="UserUrl" Tapped="UserUrl_OnTapped" PointerEntered="UserUrl_OnPointerEntered" PointerExited="UserUrl_OnPointerExited" Text="Login Here" />
    </StackPanel>
</Window>
